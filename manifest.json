{
  "manifest_version": 2,

  "name": "Gab.ai",
  "description": "The full gab experience on any webpage!",
  "version": "0.2",
  "browser_action": {
    "default_icon": "icons/gab.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "192": "icons/gab.png"
  },
  "permissions": ["webRequest", "webRequestBlocking", "*://*.gab.ai/"],
  "content_security_policy":
    "script-src 'self' https://gab.ai; object-src 'self'",
  "commands": {},
  "web_accessible_resources": ["popup/*"]
}
